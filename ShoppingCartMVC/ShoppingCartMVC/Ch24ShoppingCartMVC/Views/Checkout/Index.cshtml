@model Ch24ShoppingCartMVC.Models.CheckoutViewModel

@{
    ViewBag.Title = "Checkout";
  
}

<h2>Checkout</h2>
@if (Model.Cart.Count == 0)
{
    <p>There is nothing to check out.</p>
}
else
{
    <table style="width:100%" border="1">
        <tr>
            <th>Quantity </th>
            <th>Price </th>
            <th>Unit Price </th>
            <th>Total Price (Before Tax)</th>
           
        </tr>
        @foreach (var item in Model.Cart)
        {
            <tr>
                <td style="text-align: center">@item.Name</td>
                <td style="text-align: center">@item.Quantity</td>
                <td style="text-align: center">@Math.Round(item.UnitPrice, 2)</td>
                <td style="text-align: center">@Math.Round((item.UnitPrice * item.Quantity), 2)$</td>
               
            </tr>
        }
    </table>
    <br/>
    <p> Price (Before Tax):  @Math.Round(Model.Total, 2)$</p>
    <p> Price (After Tax) :  @Math.Round((Model.Total * (1 + Model.tax)), 2)$</p>
    <form>
    <input type="radio" id="paypal">
        <label for="paypal"><img src="~/Content/Images/paypal.png"></label>
     <br />
    <input type="radio"  id="mastercard">
        <label for="mastercard"><img src="~/Content/Images/mastercard.png" ></label>
    <br />
    <input type="radio" id="visa">
        <label for="visa">  <img src="~/Content/Images/visa.png"></label>
     <br />
</form>

    <br /><br />

    <h2> Shipping Address: </h2>
